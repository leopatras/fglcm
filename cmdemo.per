TABLES 
    demos,
    topics

ATTRIBUTES
    LABEL label:text="Demo directory", STYLE="title";

    TREE t1: IDCOLUMN = name, PARENTIDCOLUMN = parent;
    topic = topics.name;
    PHANTOM topics.parent;
    PHANTOM topics.dirname;

    TABLE t2: DOUBLECLICK = show_or_run, HEIGHT = 15 LINES;
    demo = demos.name;
    prog = demos.program;
    args = demos.args;
    IMAGE t = demos.type;
    PHANTOM demos.database;
    desc = demos.description;
    PHANTOM demos.dirname;

    TEXTEDIT readme = FORMONLY.readme, STRETCH=BOTH, FONTPITCH=FIXED, NOENTRY;

INSTRUCTIONS
    SCREEN RECORD s_topics(topics.*);
    SCREEN RECORD s_demos(demos.*);
